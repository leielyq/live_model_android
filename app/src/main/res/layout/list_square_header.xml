<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="280px"
        android:background="@color/colorPrimaryDark"/>

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="180px">

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="133px"
            android:layout_marginTop="32px"
            android:src="@color/colorAccent"/>

        <TextView
            android:layout_width="112px"
            android:layout_height="24px"
            android:layout_marginLeft="118px"
            android:layout_marginTop="128px"
            android:gravity="center"
            android:text="欢乐牛牛"
            android:textSize="26px"/>

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="335px"
            android:layout_marginTop="32px"
            android:src="@color/colorAccent"/>

        <TextView
            android:layout_width="84px"
            android:layout_height="24px"
            android:layout_marginLeft="333px"
            android:layout_marginTop="128px"
            android:gravity="center"
            android:text="百家乐"
            android:textSize="26px"/>

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="539px"
            android:layout_marginTop="32px"
            android:src="@color/colorAccent"/>

        <TextView
            android:layout_width="84px"
            android:layout_height="24px"
            android:layout_marginLeft="537px"
            android:layout_marginTop="128px"
            android:gravity="center"
            android:text="比大小"
            android:textSize="26px"/>


    </com.zhy.autolayout.AutoFrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16px"
        android:background="#f0f2f4"/>

    <TextView
        android:layout_width="159px"
        android:layout_height="34px"
        android:layout_marginLeft="296px"
        android:layout_marginTop="50px"
        android:gravity="center"
        android:text="火爆·热推"
        android:textSize="34px"/>

    <View
        android:layout_width="40px"
        android:layout_height="2px"
        android:layout_marginLeft="355px"
        android:layout_marginTop="16px"
        android:background="#666666"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_square_header_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="159px"
        android:layout_height="34px"
        android:layout_marginLeft="296px"
        android:layout_marginTop="50px"
        android:gravity="center"
        android:text="都在·这儿"
        android:textSize="34px"/>

    <View
        android:layout_width="40px"
        android:layout_height="2px"
        android:layout_marginLeft="355px"
        android:layout_marginTop="16px"
        android:background="#666666"/>
</com.zhy.autolayout.AutoLinearLayout>
