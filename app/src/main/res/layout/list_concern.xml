<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_concern_img"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="32px"
        android:layout_marginTop="40px"
        android:src="@color/colorAccent"/>

    <TextView
        android:id="@+id/list_concern_name"
        android:layout_width="wrap_content"
        android:layout_height="30px"
        android:layout_marginLeft="142px"
        android:layout_marginTop="42px"
        android:text="Angelababsy"
        android:textSize="30px"/>

    <TextView
        android:id="@+id/list_concern_address"
        android:layout_width="wrap_content"
        android:layout_height="30px"
        android:layout_marginLeft="132px"
        android:layout_marginTop="88px"

        android:drawableLeft="@drawable/search"
        android:gravity="center"
        android:text="上海市"
        android:textSize="28px"/>

    <TextView
        android:id="@+id/list_concern_num"
        android:layout_width="wrap_content"
        android:layout_height="28px"
        android:layout_marginLeft="571px"
        android:layout_marginTop="90px"
        android:drawableLeft="@drawable/search"
        android:gravity="center"
        android:text="6666666"
        android:textSize="28px"/>


    <ImageView
        android:id="@+id/list_concern_big_img"
        android:layout_width="750px"
        android:layout_height="600px"
        android:layout_marginTop="140px"
        android:background="@color/colorPrimary"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_concern_game_img"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="32px"
        android:layout_marginTop="660px"
        android:src="@color/colorAccent"/>

    <TextView
        android:id="@+id/list_concern_game_name"
        android:layout_width="wrap_content"
        android:layout_height="36px"
        android:layout_marginLeft="124px"
        android:layout_marginTop="682px"
        android:text="百家乐"
        android:textColor="#fff"
        android:textSize="36px"/>
    <View
        android:layout_width="750px"
        android:background="#f0f2f4"
        android:layout_marginTop="740px"
        android:layout_height="16px"/>
</com.zhy.autolayout.AutoFrameLayout>